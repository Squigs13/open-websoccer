<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE module SYSTEM "../module.dtd">
<module version="1.0.0">

    <dependencies>
        <dependency module="leagues" version="1.0.0"/>
    </dependencies>
    
    <admin>
        <adminpage
            id="trainingcamp"
            entity="trainingcamp"
            navcategory="league"
            permissionrole="r_data" >

            <entity dbtable="training_camp" >

                <overview delete="true" edit="true" >

                    <column
                        id="entity_trainingcamp_name"
                        field="name"
                        type="text"
                        sort="true"
                        filter="true" />
                    
                    <column
                        id="entity_trainingcamp_country"
                        field="country"
                        type="text"
                        sort="true"
                        filter="true" />
                    
                    <column
                        id="entity_trainingcamp_price_player_day"
                        field="price_player_day"
                        type="number"
                        sort="true" />
                    
                    <column
                        id="entity_trainingcamp_p_strength"
                        field="p_strength"
                        type="number"
                        sort="true" />
                    
                    <column
                        id="entity_trainingcamp_p_technique"
                        field="p_technique"
                        type="number"
                        sort="true" />
                    
                    <column
                        id="entity_trainingcamp_p_stamina"
                        field="p_stamina"
                        type="number"
                        sort="true" />
                    
                    <column
                        id="entity_trainingcamp_p_fitness"
                        field="p_fitness"
                        type="number"
                        sort="true" />
                    
                    <column
                        id="entity_trainingcamp_p_morale"
                        field="p_morale"
                        type="number"
                        sort="true" />
                    
                </overview>

                <editform>
                    
                    <field id="name" type="text" required="true" />
                    <field id="country" type="text" required="true" />
					<field id="price_player_day" type="number" required="true" />
					<field id="p_strength" type="number" required="true" />
					<field id="p_technique" type="number" required="true" />
					<field id="p_stamina" type="number" required="true" />
					<field id="p_fitness" type="number" required="true" />
					<field id="p_morale" type="number" required="true" />
                </editform>
            </entity>
        </adminpage>
    </admin>
    
    <settings>
      <setting id="trainingcamp_min_days" category="game" type="number" default="3" />
      <setting id="trainingcamp_max_days" category="game" type="number" default="5" />
      <setting id="trainingcamp_booking_max_days_in_future" category="game" type="number" default="30" />
  </settings>
    
    <pages>
        <page
            id="trainingcamp"
            template="trainingcamp"
            model="TrainingCampsModel"
            parentItem="office"
            navitem="true"
            navweight="5"
            role="user">
            <page
	            id="camp-details"
	            template="camp-details"
	            model="TrainingCampsDetailsModel"
	            role="user" />
        </page>

    </pages> 
    
  <actions>
	<action id="book-camp" controller="BookCampController" role="user" log="true">
	    <param id="id" type="number" required="true" min="1" max="2000000000" />
		<param id="start_date" type="date" required="true" min="5" max="20" />
		<param id="days" type="number" required="true" min="1" />
	</action>
	
	<action id="cancel-camp" controller="CancelCampController" role="user">
	    <param id="bookingid" type="number" required="true" min="1" max="2000000000" />
	</action>
	
  </actions>
    
</module>